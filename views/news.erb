<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Oxanium&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Your local news & weather</title>
  </head>
  <body>

  <div class="container mt-5">
        <hr>
        <h1> — Your current weather report — </h1> <br>
        <div class = "row">
            <div class = "col-sm-3"> </div>
            <div class = "col-sm-6">
                 <div class="card">
                  <div class="card-body">
                     <h2>Temperature (F): <strong><%=@current_temperature%></strong> </h2>
                     <h2>UV index: <strong><%=@current_uvIndex %></strong>
                     <h2>Windspeed: <strong><%=@current_windSpeed %></strong>
                     <h2>Conditions: <strong><%=@current_summary %></strong></h2>
            </div>
            </div>
        </div>
        </div>
        </div>

<div class="container">
      <div class="row">
        <div class="col text-left">
          <hr class="my-4">
          <h1>— Your 5-day weather forecast — </h1>
        </div>
        </div>
        </div>

  <div class="container mt-5">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">Day</th>
      <th scope="col">Min temperature </th>
      <th scope="col">Max temperature </th>
      <th scope="col">UV index </th>
      <th scope="col">Chance of precipitation </th>
      <th scope="col">Windspeed </th>
      <th scope="col">Conditions</th>
    </tr>
  </thead>
  <tbody>
   <% for day in @forecast["daily"]["data"].slice(0, 5) %>
    <tr>
      <td><%= Time.at(day["time"]).strftime("%a") %> </td>
      <td><%= day["temperatureLow"] %></td>
      <td><%= day["temperatureHigh"] %></td>
      <td><%= day["uvIndex"] %></td>
      <td><%= day["precipProbability"] %></td>
      <td><%= day["windSpeed"] %></td>
      <td><%= day["summary"] %></td>
    </tr>
  <% end %>
    </tbody>
</table>
</div>

<div class="container">
      <div class="row">
        <div class="col text-left">
          <hr class="my-4">
          <h1>— Your latest local news — </h1>
        </div>
        </div>
        </div>

        
        <!-- Just a line, a "horizontal rule" with some space on the y-axis -->
        <hr class="my-4">

<div class="container">
      <div class="row">
      <div class="col-sm">
        <% j =1%>
   <% for articlenumber in @newsarray.slice(0, 5)%>
     <p> <strong> Headline <%= j %>:</strong> <%= articlenumber["title"] %> </p>
     <p><strong> URL: </strong><%= articlenumber["url"] %></p>
     <br>
     <% j = j+1 %>
   <% end %>
   </div>
        </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>